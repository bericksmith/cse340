<div>
  <h1>Inventory Management</h1>
  <% if (messages && messages.length> 0) { %> <% messages.forEach(message=> { %>
  <div class="message-container">
    <div class="<%= message.type %>"><%= message.text %></div>
  </div>
  <% }) %> <% } %>
  <div>
    <ul class="no-bullets">
      <li><a href="/inv/add-classification">Add New Classification</a></li>
      <li><a href="/inv/add-inventory">Add New Inventory</a></li>
    </ul>
  </div>
  <div class="manager">
    <h2>Manage Inventory</h2>
    <p>
      Select a classification from the list below to see the items belonging to
      the classification.
    </p>
    <!-- Display classification list -->
    <%- classificationList %>
    <!-- Table to display inventory items -->
    <table id="inventoryDisplay"></table>
  </div>
  <!-- Display message if JavaScript is disabled -->
  <noscript>JavaScript must be enabled to use this page.</noscript>
  <script src="../../js/inventory.js"></script>
</div>
