<h2>Delete Inventory Item</h2>
<p>Confirm Deletion - The delete is permanent.</p>
<div class="form-container">
  <fieldset>
    <form action="/inv/delete" method="POST">
      <input type="hidden" name="inv_id" value="<%= vehicle.inv_id %>" />
      <div class="form-group">
        <label for="inv_make">Make:</label>
        <input
          type="text"
          id="inv_make"
          name="inv_make"
          value="<%= vehicle.inv_make %>"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="inv_model">Model:</label>
        <input
          type="text"
          id="inv_model"
          name="inv_model"
          value="<%= vehicle.inv_model %>"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="inv_year">Year:</label>
        <input
          type="text"
          id="inv_year"
          name="inv_year"
          value="<%= vehicle.inv_year %>"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="inv_price">Price:</label>
        <input
          type="text"
          id="inv_price"
          name="inv_price"
          value="$<%= vehicle.inv_price.toLocaleString() %>"
          readonly
        />
      </div>
      <button type="submit" class="form-button">Delete</button>
    </form>
  </fieldset>
</div>
