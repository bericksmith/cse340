<div class="container">
  <h1>Add New Classification</h1>
  <div class="message-container">
    <% if (messages.length> 0) { %>
    <% messages.forEach(message=> { %>
        <div class="alert alert-<%= message.type %>">
            <%= message.text %>
        </div>
    <% }) %>
    <% } %>

    <% if (errors.length> 0) { %>
        <% errors.forEach(error=> { %>
            <div class="error">
                <%= error %>
            </div>
        <% }) %>
<% } %>
</div>


  <div class="form-container">
    <form
      id="addClassificationForm"
      action="/inv/add-classification"
      method="post"
    >
      <fieldset>
        <div class="form-group">
          <label for="classification-name">Classification Name:</label>
          <input
            type="text"
            id="classification-name"
            name="classification_name"
            required
            pattern="^[a-zA-Z]+$"
            value="<%= locals.classification_name %>"
          />
          <p>
            Classification name cannot contain spaces or special characters.
          </p>
        </div>
        <button type="submit" class="form-button">Add Classification</button>
      </fieldset>
    </form>
  </div>
</div>
