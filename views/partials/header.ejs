<header id="top-header">
    <span class="siteName">
      <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">
      <% if (loggedIn) { %>
        <!-- Display when logged in -->
        <a title="Account Info" href="/account/">Welcome <%= accountData.firstName %> |</a>
        <a title="Logout" href="/account/logout">Logout</a>
      <% } else { %>
        <!-- Display when logged out -->
        <a title="My Account" href="/account/login">My Account</a>
      <% } %>
    </div>
  </header>
  